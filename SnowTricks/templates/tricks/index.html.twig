{% extends 'tricks/base.html.twig' %}

{% block title %}Tricks index{% endblock %}

{% block body %}
    <h1>La liste des Tricks avec leurs commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Pictures</th>
                <th>Video</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trick in tricks %}
            <tr>
                <td>{{ trick.id }}</td>
                <td>{{ trick.name }}</td>
                <td>{{ trick.description }}</td>
                <td>{{ trick.pictures }}</td>
                <td>{{ trick.video }}</td>
                <td>
                    <a href="{{ path('tricks_show', {'id': trick.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('tricks_edit', {'id': trick.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tricks_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
