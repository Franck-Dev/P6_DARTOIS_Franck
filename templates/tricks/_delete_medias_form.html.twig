{% if image is defined %}
    {% set media = image %}
{% else %}
    {% set media = video %}
{% endif %}
<form method="post" action="{{ path('image_delete', {'id': media.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ media.id) }}">
    <button class="btn"><span class="w-100" style="font-size: 1.3em; color: Tomato;"><i class="fa fa-trash"></i></span></button>
    {# <a href="" id="hRefDelete"><span class="m-1" style="font-size: 1.3em; color: Tomato;"><i class="fa fa-trash"></i></span></a> #}
</form>
